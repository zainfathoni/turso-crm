{
  "name": "turso-crm",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix build",
    "dev": "remix dev --manual",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "remix-serve ./build/index.js",
    "typecheck": "tsc",
    "drizzle:migrate": "tsx drizzle/migrate",
    "drizzle:generate": "drizzle-kit generate:sqlite --out ./drizzle/migrations --breakpoints --schema=./drizzle/schema.ts",
    "drizzle:generate:orgs": "drizzle-kit generate:sqlite --out ./drizzle/migrations-orgs --breakpoints --schema=./drizzle/org-schema.ts"
  },
  "dependencies": {
    "@libsql/client": "0.4.0-pre.5",
    "@remix-run/css-bundle": "^2.4.1",
    "@remix-run/node": "^2.4.1",
    "@remix-run/react": "^2.4.1",
    "@remix-run/serve": "^2.4.1",
    "@vercel/remix": "2.4.1",
    "axios": "1.6.3",
    "bcryptjs": "2.4.3",
    "drizzle-orm": "0.29.2",
    "isbot": "^3.6.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "resend": "2.1.0",
    "uuid": "9.0.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.4.1",
    "@types/bcryptjs": "2.4.6",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@types/uuid": "9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "dotenv": "16.3.1",
    "drizzle-kit": "0.20.9",
    "eslint": "^8.38.0",
    "tailwindcss": "3.4.0",
    "tsx": "4.7.0",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
